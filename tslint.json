{
  "lintOptions": {
    "typeCheck": true
  },
  "extends": "tslint:recommended",
  "rules": {
    "deprecation": {
      "severity": "warning"
    },
    "max-line-length": [
      true,
      220
    ],
    "one-line": [
      false,
      "check-else"
    ],
    "quotemark": [
      true,
      "single"
    ]
  }
}
